<div class="container">
  <div class="row">
    <div class="col-lg-12 mt-5">
      <% if flash[:alert] %>
        <div class="alert alert-warning"> <%= flash[:alert]  %> </div>
      <% end %>
      <div class="mx-auto mt-5" style="width: 400px">
        <%= form_with(url: '' , method: 'get', local: true) do %>
          <div class="form-group">
            <%= label_tag :availability , 'Busca disponibilidad segun dia de la semana' %>
            <%= text_field_tag :day, nil, placeholder: 'Busca por dia' , class: 'form-control' %>
          </div>
          <%= button_tag 'Buscar' , class:'btn btn-success btn-block' %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<p id="notice"><%= notice %></p>

<h1>Peliculas disponibles</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Url de imagen</th>
      <th>Disponibilidad</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.name %></td>
        <td><%= movie.description %></td>
        <td><%= movie.url %></td>
        <td><%= movie.day %></td>
        <td><%= link_to 'Mostrar', movie %></td>
        <td><%= link_to 'Editar', edit_movie_path(movie) %></td>
        <td><%= link_to 'Eliminar', movie, method: :delete, data: { confirm: 'Esta seguro(a) de borrar esta pelicula?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Ingresa una pelicula', new_movie_path %>
